{
  "name": "event-hub",
  "version": "6.1.0",
  "description": "event-hub on a dom tree",
  "main": "dist/event-hub-common.js",
  "scripts": {
    "test": "karma start karma.conf.js --single-run",
    "lint": "standard",
    "dist": "rollup -f iife src/browser.js | buble | tee dist/event-hub.js | uglifyjs -mc > dist/event-hub.min.js",
    "dist:cjs": "rollup -f cjs src/event-hub.js | buble > dist/event-hub-commonjs.js"
  },
  "keywords": [
    "classcaps",
    "event",
    "hub",
    "bus",
    "pubsub"
  ],
  "author": "Yoshiya Hinosawa <stibium121@gmail.com> (https://twitter.com/kt3k)",
  "license": "MIT",
  "devDependencies": {
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "buble": "^0.15.2",
    "chai": "^3.5.0",
    "classcaps": ">=0.1.2",
    "jquery": "^3.1.1",
    "karma": "^1.4.0",
    "karma-browserify": "^5.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sinon": "^1.0.4",
    "mocha": "^3.2.0",
    "rollup": "^0.41.4",
    "sinon": "^1.14.1",
    "standard": "^8.6.0",
    "uglify-js": "^2.7.5"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "standard": {
    "env": [
      "mocha",
      "browser"
    ],
    "global": [
      "sinon",
      "cc"
    ],
    "ignore": [
      "dist"
    ]
  }
}
